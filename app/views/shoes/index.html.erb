<div class="jumbotron">
</div>

<div class="container">
  <div class="col-md-8 col-md-offset-3">
     <% @categories.each do |category| %>
      <%= link_to category.name, shoes_path(filter: category.name), class: "btn btn-default" %>
      <% end %>

  </div>
  <div class="col-md-12">
    <% @shoes.each do |shoe| %>
      <div class="col-md-3">
        <%= image_tag shoe.image, class: "shoe_images"%>
        <h3><%= link_to shoe.name, shoe_path(shoe)%></h3>
    </div>
    <%end%>
  </div>

</div>

<h3 class="text-center">Shoes for Sale</h3>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <% @shoes.each do |shoe| %>
      <%= render "shoe_row", shoe: shoe, order_item: @order_item %>
    <% end %>
  </div>
</div>
