<div class="show">
<section class="container">


<div class="col-md-7">
<h1>Your shopping cart</h1>
</div>


<div class="col-md-8" >
<table style="width:100%">
  <tr>
    <th style="width:30%">Brand</th>
    <th style="width:40%">Name</th>
    <th style="width:20%">Price</th>
    <th style="width:5%">Remove</th>
  </tr>

<% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= cart_item.shoe.brand %></td>
    <td><%= cart_item.shoe.name %></td>
    <td>€ <%= '%.2f' % cart_item.shoe.price %></td>
    <td><div id="clickneg">
    <%= link_to "x", cart_item, method: :delete, data: { confirm: "You are about to remove #{cart_item.shoe.name} from your cart." },class: "btn btn-default" %>
    </div></td>
  </tr>
<% end %>
 <tr>
   <th></th>
   <th><h1>Your Total: </h1></th>
   <th><h1>€ <%= '%.2f' % @cart.total_price %></h1></th>
 </tr>
</table>
</div>
<div class="col-md-4" >
<a href="#" class="btn btn-lg btn-warning"><span class="glyphicon glyphicon-download-alt"></span> Checkout</a>
</div>
</div>
</div>
